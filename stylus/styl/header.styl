.site-header
    display: flex
    align-items: center
    width: auto
    background-color: black

    .logo
        font-family: 'Michroma'
        color: #30746a
        font-size: 1.3rem
        font-weight: bold
        padding: .75rem 1rem .85rem
        margin-right: 1rem
        cursor: pointer     

    .nav-links        
        display: flex       
        align-items: center

        li
            font-family: 'Michroma'
            color: #fbfbfb
            font-size: .9rem
            font-weight: bold
            letter-spacing: 1px
            padding: .75rem 1rem
            line-height: 2.2
            border-left: 2px solid #30746a
            &:last-child
                border-right: 2px solid #30746a
            transition: all .2s ease-out
            &:hover
                cursor: pointer
                background-color: #30746a

