.site-header
    display: flex
    align-items: center
    width: auto
    background-color: black

    .logo
        font-family: $fd-brand-font
        color: $fd-teal
        font-size: 1.3rem
        font-weight: bold
        padding: .75rem 1rem .85rem
        margin-right: 1rem
        cursor: pointer     

    .nav-links        
        display: flex       
        align-items: center

        li
            font-family: $fd-brand-font
            color: #fbfbfb
            font-size: .9rem
            font-weight: bold
            letter-spacing: 1px
            padding: .75rem 1.25rem
            line-height: 2.2
            border-left: 1px solid $fd-teal
            &:last-child
                border-right: 1px solid $fd-teal
            transition: all .2s ease-out
            &:hover
                cursor: pointer
                background-color: $fd-teal

