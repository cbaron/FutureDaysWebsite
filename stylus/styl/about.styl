.about
    
    .quote-container
        margin: 0 auto 3rem
        width: 85%
        
        .client-quote
            padding: 3rem 4rem 4rem
            background-color: #e8e8e8
            font-style: italic
            font-weight: 300
            position: relative
            line-height: 1.6em
            
            cite
                position: absolute
                display: block
                bottom: 1.4rem
                right: 1rem
                font-style: normal
                line-height: 1
                text-align: right
    
    .selling-points
        display: flex
        flex-wrap: wrap
        justify-content: center
        
        .selling-point
            width: 35%
            margin: 1rem