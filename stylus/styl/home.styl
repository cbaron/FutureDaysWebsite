.home-page
    width: 100%
    height: 100%
        
    .cover-image
        display: flex
        align-items: center
        text-align: center
        justify-content: center
        height: 500px
        width: 100%
        background-color: #eee
        background-image: url("/static/img/f9o7u-cndjk-tony-webster.jpg");
        background-size: cover
        background-repeat: no-repeat
        border-bottom: 1px solid #eee
        
        .cover-text
            color: white
            font-family: RalewayRegular
    
    .intro
        width: 75%
        background-color: #e8e8e8
        padding: 1rem 1rem .5rem
        margin: 2rem auto 1.5rem
        text-align: center
        
        .intro-text
            letter-spacing: 1px

    .services
        display: flex
        flex-wrap: wrap
        justify-content: center
        margin: 0 2rem 1rem
        
        .service
            width: 40%
            margin: 1rem
            text-align: center
                
    .learn-more
        margin: 0 30% 2rem
        text-align: center
        border-top: 1px solid #ccc
        padding-top: 1rem
        
        .btn-ghost
            set-btn-color(#027188, white)
        