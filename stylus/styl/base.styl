html
    font-size: 100%
    height: 100%
    box-sizing: border-box
    
*,
*::before,
*::after
    box-sizing: inherit

body 
    height: 100%
    font-family: Lato
    font-size: 1rem
    font-weight: 400
    line-height: 1.5
    text-align: left
    color: #666
    padding: 0 2rem
    
h1, h2, h3, h4, h5, h6
    margin-top: 0
    margin-bottom: .5rem
    font-weight: 500
    line-height: 1.2
    letter-spacing: 1px
    color: #555
    
p
    margin-top: 0
    margin-bottom: 1rem
    
ul, li
    list-style-type: none
    padding: 0
    margin: 0
    
input,
button,
select,
textarea
    margin: 0
    border-radius: 0
    
input, select, button
    &:focus
        outline: 0
