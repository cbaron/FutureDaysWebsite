html
    font-size: 100%
    height: 100%
    box-sizing: border-box
    
*,
*::before,
*::after
    box-sizing: inherit

body
    background-color: #fbfbfb
    height: 100%
    font-family: $base-font
    font-size: 1rem
    font-weight: 400
    line-height: 1.5
    text-align: left
    color: #555
    margin: 0
    padding: 0
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale

div.container-fluid
    height: 100%
    display: flex
    flex-flow: column

div#content
    padding-top: 78px
    flex: 1 1 auto
    
h1, h2, h3, h4, h5, h6
    font-family: RalewayRegular
    margin-top: 0
    margin-bottom: .5rem
    font-weight: 500
    line-height: 1.2
    letter-spacing: 1px
    color: #555
    
h3
    font-weight: bold

.header
    text-align: center
    margin: 2rem 0
    font-family: RalewayRegular
    font-weight: 400
    font-style: normal
    font-size: 1.8rem
    
.hide
    opacity: 0
    transition: all 1s ease-in-out

.hidden
    display: none !important
        
p
    margin-top: 0
    margin-bottom: 1rem
    
ul, li, dl, dt, dd
    list-style-type: none
    padding: 0
    margin: 0
    
a
    text-decoration: none
    
input,
button,
select,
textarea
    margin: 0
    border-radius: 0
    
input, textarea, select, button
    &:focus
        outline: 0
