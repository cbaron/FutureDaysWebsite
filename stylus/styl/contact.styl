.contact
    display: flex
    height: 100%
    width: 100%
    
    .fd-info
        flex: 0 1 50%
        padding: 2rem
        
        .info-box
        
            h2
                font-family: RalewayRegular
                font-weight: bold
                
            .contact-details
                font-size: .9rem
                text-transform: uppercase
                margin-top: 1.5rem
                
                dt
                    font-weight: bold
                
                dd
                    margin-bottom: .5rem
        
    .contact-form
        flex: 0 1 50%
        padding: 2rem
        
        .form-group
            width: 100%
            
            input, textarea
                width: 75%