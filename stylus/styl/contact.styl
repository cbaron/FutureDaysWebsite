.contact
    display: flex
    height: 100vh
    background-color: #fbfbfb
    
    .fd-info
        flex: 0 1 50%
        padding: 4em
        
        h2
            font-size: 2rem
            font-weight: bold
                        
        p
            font-size: 1.1rem
            
        .contact-details
            font-size: .9rem
            text-transform: uppercase
            margin-top: 1.5rem
            
            dt
                font-weight: bold
            
            dd
                margin-bottom: .5rem
        
    .contact-form
        flex: 0 1 50%