.demo
    display: flex
    flex-direction: row
    background-color: #fbfbfb
    
    .sidebar
        order: 2
        flex: 1
        text-align: center

    .demo-content
        order: 1
        width: 80%
        padding: 1rem
            
        .example
            width: 100%
            background-color: #fff
            border: 1px solid $fd-teal
            border-left-width: 5px
            padding: 2.5rem
            margin: 1rem 0 2rem
            box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
            
        .inline-view
            margin-bottom: 2.5rem