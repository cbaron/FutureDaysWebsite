{
  "description": "Site for Future Days",
  "engines": {
    "node": "5.8.0"
  },
  "dependencies": {
    "backbone": "^1.3.1",
    "jquery": "^2.2.1",
    "moment": "^2.12.0",
    "node-env-file": "^0.1.8",
    "pg": "^4.5.1",
    "pg-native": "^1.10.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "browserify-fs": "^1.0.0",
    "commander": "^2.9.0",
    "dot": "^1.0.3",
    "live-reload": "^1.1.0",
    "parallelshell": "^2.0.0",
    "stylus": "^0.54.0",
    "uglify-js": "^2.6.2",
    "watch": "0.17.1"
  },
  "license": "BSD-3-Clause",
  "name": "FutureDays",
  "repository": {
    "type": "git",
    "url": "https://github.com/cbaron/futuredays.git"
  },
  "scripts": {
    "build:css": "stylus -w stylus/main.styl -o static/css/main.css",
    "build:html": "dottojs -s ./jst/server/ -d ./templates/",
    "build:js": "browserify client/js/main.js > static/js/main.js",
    "build:templates": "dottojs -s ./jst/client/ -d ./client/js/templates/",
    "build:watch": "parallelshell 'npm run watch:css' 'npm run watch:js' 'npm run watch:html' 'npm run watch:templates' 'npm run livereload'",
    "livereload": "live-reload --port 9091 static/",
    "watch:css": "watch 'npm run build:css' stylus --ignoreDotFiles",
    "watch:html": "watch 'npm run build:html' jst/server --ignoreDotFiles",
    "watch:js": "watch 'npm run build:js' client/js --ignoreDotFiles",
    "watch:templates": "watch 'npm run build:templates' jst/client --ignoreDotFiles"
  },
  "version": "0.0.1"
}
