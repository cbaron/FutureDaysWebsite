{
  "description": "Site for Future Days",
  "engines": {
    "node": "5.8.0"
  },
  "dependencies": {
    "backbone": "^1.3.1",
    "jquery": "^2.2.1",
    "moment": "^2.12.0",
    "pg": "^4.5.1",
    "pg-native": "^1.10.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "dot-packer": "0.0.5",
    "parallelshell": "^2.0.0",
    "stylus": "^0.54.0",
    "watch": "^0.17.1"
  },
  "license": "BSD-3-Clause",
  "name": "FutureDays",
  "repository": {
    "type": "git",
    "url": "https://github.com/cbaron/futuredays.git"
  },
  "scripts": {
    "build:css": "stylus -w stylus/main.styl -o static/css/main.css",
    "build:html": "./scripts/precompileServerHbs.sh",
    "build:js": "browserify client/js/main.js > static/js/main.js",
    "build:templates": "handlebars hbs/client -f client/js/templates -c",
    "build:watch": "parallelshell 'npm run watch:css' 'npm run watch:js' 'npm run watch:html'",
    "watch:css": "watch 'npm run build:css' stylus",
    "watch:html": "watch 'npm run build:html' hbs/server",
    "watch:js": "watch 'npm run build:js' client/js"
  },
  "version": "0.0.1"
}
